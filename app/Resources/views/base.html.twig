<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link href="{{ asset('css/style.css') }}" rel="stylesheet" media="screen">
      <link href="{{ asset('i/sprite.css') }}" rel="stylesheet" media="screen">
      <link href="{{ asset('leaflet/leaflet.css') }}" rel="stylesheet" media="screen">

      {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
            <div class="navbar-header">
              <a class="navbar-brand" href="{{ path('homepage') }}">Räls</a><p class="navbar-text">En reseplanerare för SL</p>
            </div>
          </div>
        </div>
      </div>
    </nav>
        {% block body %}{% endblock %}
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            Byggd av <a href="https://twitter.com/victorhggqvst">Victor Häggqvist</a> | <a href="{{ path('about') }}">Om Räls</a>
          </div>
        </div>
      </div>
    </footer>

        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>

        {% block javascripts %}{% endblock %}
    </body>
</html>
