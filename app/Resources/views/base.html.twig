<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
      <link href="{{ asset('css/style.css') }}" rel="stylesheet" media="screen">
      <link href="{{ asset('i/sprite.css') }}" rel="stylesheet" media="screen">
      <link href="{{ asset('leaflet/leaflet.css') }}" rel="stylesheet" media="screen">

      {% block stylesheets %}{% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    <nav class="navbar navbar-inverse">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
            <div class="navbar-header">
              <a class="navbar-brand" href="{{ path('homepage') }}">Räls</a><p class="navbar-text">{% trans %}En reseplanerare för SL{% endtrans %}</p>
            </div>
          </div>
        </div>
      </div>
    </nav>
        {% block body %}{% endblock %}
    <footer>
      <div class="container">
        <div class="row">
          <div class="col-md-8 col-md-offset-2">
            {% trans %}Byggd av{% endtrans %} <a href="https://twitter.com/victorhggqvst">Victor Häggqvist</a> | <a href="{{ path('about') }}">{% trans %}Om Räls{% endtrans %}</a> |
            {% if app.request.locale != 'sv' %}
              <a href="{{ path('homepage', {'_locale': 'sv'}) }}">Svenska</a>
            {% else %}
              <a href="{{ path('homepage', {'_locale': 'en'}) }}">English</a>
            {% endif %}
          </div>
        </div>
      </div>
    </footer>

        <script src="{{ asset('js/jquery.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>

      <script src="{{ asset('bundles/bazingajstranslation/js/translator.min.js') }}"></script>
      <script src="{{ url('bazinga_jstranslation_js') }}?locales=en"></script>
        {% block javascripts %}{% endblock %}
    </body>
</html>
